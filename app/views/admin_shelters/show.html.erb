<h1><%=@shelter.name %></h1>

<p><%=@shelter.address %></p>
<p><%=@shelter.city %></p>
<p><%=@shelter.state %></p>
<p><%=@shelter.zip %></p>

<h2>Statistics</h2>
  <section id=statistics>
  Average Pet Age: <%= @shelter.average_pet_age%><br>
  Number of Pets Adoptable: <%= @shelter.adoptable_number(true) %><br>
  Number of Pets Adopted: <%= @shelter.adoptable_number(false) %><br>
  </section>

<h2>Action Required</h2>
  <section id=action_required>
  Pending Pets: <% @shelter.pets.pending.each do |pet| %>
  <%= pet.name %>
  <br>
  <% end %>
  </section>
